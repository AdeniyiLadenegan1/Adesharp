@page
@model Adesharp.Pages.TrainingModel
@{
}




<section class="contact" id="contact">

    <div class="container min-vh-100">

        <div class="row justify-content-center" data-aos="fade-up">

            <h1 class="heading"><span>Drop a message </span>If there an Emergency <span>We are ready</span>to listen!</h1>
            <form method="Post" class="col-md-10">

                @*<form action="POST">*@

                <div class="inputBox">
                    <input type="text" asp-for="training.fname" placeholder="First Name">
                    <input type="text" asp-for="training.lname" placeholder="Last Name">
                    <input type="text" asp-for="training.gender" placeholder="Gender">
                    <input type="text" asp-for="training.phone" placeholder="Phone">
                    <input type="text" asp-for="training.startMonth" placeholder="Month of start">
                    <input type="text" asp-for="training.province" placeholder="Province">
                    <input type="email" asp-for="training.email" placeholder="Enter email">
                    <input type="text" asp-for="training.address" placeholder="Address">
                    <input type="text" asp-for="training.subject" placeholder="Subject">
                    <input type="text" asp-for="training.motivation" id="textplace" cols="30" rows="10" placeholder="Why are you doing this training?">
                    

                </div>

              

                <input type="submit" name="" id="" value="CLICK TO SUBMIT" class="button">

            </form>

            <div class="row min-vh-100 align-items-center text-center text-md-left">

                <div class="col-md-6 pr-md-5" data-aos="zoom-in">
                    <img src="./images/ff1.jpg" alt="" data-aos="fade-left">
                </div>


                <div class="box" data-aos="zoom-in">
                    <h1>
                        We have successfully trained thousands of courageous men.
                        We made them into stronger individuals who have returned better and
                        have contributed immensely to the society.
                        Enrol today.
                    </h1>
                </div>
            </div>


        </div>
    </div>
</section>




